<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <!-- ///////////////////////////////////////////////////////////////////////////////// Mercenaries Pawn Units -->

	<!-- ////////////////////////////////////// Mercenary Gunner -->
	
	<Operation Class="PatchOperationReplace">
        <xpath>Defs/PawnKindDef[defName = "Mercenary_Gunner"]/combatPower</xpath>
        <value>
          <combatPower>70</combatPower>
        </value>
    </Operation>
	
	<Operation Class="PatchOperationReplace">
        <xpath>Defs/PawnKindDef[defName = "Mercenary_Gunner"]/weaponMoney/max</xpath>
        <value>
          <max>750</max>
        </value>
    </Operation>
	
	<Operation Class="PatchOperationReplace">
        <xpath>Defs/PawnKindDef[defName = "Mercenary_Gunner"]/weaponTags/li[text() = "Gun"]</xpath>
        <value>
          <li>MercGunnerGun_ANLA</li>
        </value>
    </Operation>
	
