  <!-- ==================== Flintlock Pistol T1 ========================== -->

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_FlintlockPistol_ANLA</defName>
    <label>flintlock pistol</label>
    <description>An old ancestor to many firearms used by mankind. The flintlock is one the first gunpowder firearms. It has a low fire rate &amp; has short range, it packs a small punch but cannot punch strong armor.</description>
    <graphicData>
      <texPath>Weapons/Pistols/FlintlockPistol</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Autopistol</soundInteract>
    <recipeMaker>
      <researchPrerequisite>Resarch_BasicGunsmithing_ANLA</researchPrerequisite>
      <skillRequirements>
        <Crafting>2</Crafting>
      </skillRequirements>
	  <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
    </recipeMaker>
    <weaponTags Inherit="False">
      <li>SimpleGun</li>
	  <li>ScavGun_ANLA</li>
	  <li>VilagerWeap_ANLA</li>
    </weaponTags>
    <statBases>
      <WorkToMake>4000</WorkToMake>
      <Mass>1.2</Mass>
      <AccuracyTouch>0.90</AccuracyTouch>
      <AccuracyShort>0.70</AccuracyShort>
      <AccuracyMedium>0.48</AccuracyMedium>
      <AccuracyLong>0.28</AccuracyLong>
      <RangedWeapon_Cooldown>1.78</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>12</Steel>
	  <WoodLog>15</WoodLog>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>ANLABullet_FlintlockPistol</defaultProjectile>
        <warmupTime>0.8</warmupTime>
        <range>14.9</range>
        <soundCast>ANLAShot_Musket</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>7</power>
        <cooldownTime>2.0</cooldownTime>
      </li>
    </tools>
	<thingCategories Inherit="False">
      <li>WeaponsRanged_Handguns_ANLA</li>
    </thingCategories>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>ANLABullet_FlintlockPistol</defName>
    <label>flintlock pistol ball</label>
